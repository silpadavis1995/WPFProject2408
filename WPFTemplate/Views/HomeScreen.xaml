<UserControl x:Class="WPFTemplate.Views.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:WPFTemplate.Properties"
             xmlns:local="clr-namespace:WPFTemplate.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="{x:Static p:Resources.String4}" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 5 0 0"/>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Button Content="{x:Static p:Resources.String1}" Width="200" Margin="0 0 0 10" Command="{Binding MoveToAnotherScreen}"/>

        </StackPanel>
    </Grid>
</UserControl>
